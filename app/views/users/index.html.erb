<% if can? :manage, User %>
<div class="container-fluid">
	<h1>User List</h1>

	<table class="listing" summary="User list">
			<tr class="header">
				<th>ID</th> <th> | </th>
				<th>Full Name</th> <th> | </th>
	      <th>Email</th> <th> | </th>
				<th>Actions</th>
	    </tr>

	    <% @users.each do |user|%>
	    <tr>
	        <td><%= user.id %></td> <th> | </th>


	        <td>
						<% if user.first_name.eql?("") && user.last_name.eql?("") %>
						No name
						<%else%>
						<%=user.first_name%> <%=user.last_name%>
						<%end%>
					</td> <th> | </th>

					<td><%= user.email %></td> <th> | </th>

	        <td class="actions">
	        	<%= link_to "Show", {:action => "show", :id => user.id} %>
						<%= link_to "Edit", {:action => "edit", :id => user.id} %>
						<%= link_to "Delete", {:action => "delete", :id => user.id} %>
			<% end %>
	      	</td>
	    </tr>
	</table>
</div>
<% else %>
	<h2> This page is only available for superadmins and superadvisors! </h2>
<% end %>
